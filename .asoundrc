pcm.volume {
  type softvol
  slave.pcm "output"
  control {
    name "SoftMaster"
    card 0
  }
}

pcm.!default {
  type asym
  playback.pcm {
    type plug
    slave.pcm "volume"
  }
  capture.pcm {
    type plug
    slave.pcm "input"
  }
}

pcm.output {
  type hw
  card 0
}

ctl.!default {
  type hw
  card 0
}
